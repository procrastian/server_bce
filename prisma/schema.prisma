// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Directory {
  id              Int           @id @default(autoincrement())
  courses         Course[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Course {
  id              Int           @id @default(autoincrement())
  directories     Directory[]
  title           String
  description     String
  length          Int
  startDates      String[]
  coverImage      String
  tags            Tags[]
  users           User[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model User {
  id              Int           @id @default(autoincrement())
  email           String        @unique
  password        String
  courses         Course[]
  contact         Contact?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Contact {
  id              Int           @id @default(autoincrement())
  userId          Int           @unique
  User            User          @relation(fields: [userId], references: [id])
  firstName       String
  lastName        String
  addressLine1    String
  addressLine2    String
  town            String
  city            String
  county          String
  postcode        String
  country         String
  phoneNumber1    String
  phoneNumber2    String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

enum Tags {
  Meditation
  Mindfullness
  UnderFive
  PrimaryAge
  SecondaryAge
}
